<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Conteudo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body  %></td>
      <td><%= link_to 'Mostrar', post %></td>
      <td><%= link_to 'Modificar', edit_post_path(post) %></td>
      <td><%= link_to 'Remover', post, method: :delete, 
        data: { confirm: 'Tem certeza ?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
